<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginLeft="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_item_image"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_item3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#0f034e"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yellow Jersey for Toddlers"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/home_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0f034e"
                    android:text="#8,000"

                    android:textColor="#fff"
                    android:textSize="12dp" />


            </LinearLayout>

            <Button
                android:id="@+id/cart_button"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
                android:background="@drawable/light_button"
                android:layout_marginLeft="45dp"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>